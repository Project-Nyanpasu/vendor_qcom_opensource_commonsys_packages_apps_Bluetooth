<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/line1_title"
            style="@style/file_transfer_item_label" />

        <TextView
            android:id="@+id/line1_view"
            style="@style/file_transfer_item_content" />

        <TextView
            android:id="@+id/line2_title"
            style="@style/file_transfer_item_label" />

        <TextView
            android:id="@+id/line2_view"
            style="@style/file_transfer_item_content" />

        <TextView
            android:id="@+id/line3_title"
            style="@style/file_transfer_item_label" />

        <TextView
            android:id="@+id/line3_view"
            style="@style/file_transfer_item_content" />

        <TextView
            android:id="@+id/line4_title"
            style="@style/file_transfer_item_label" />

        <TextView
            android:id="@+id/line4_view"
            style="@style/file_transfer_item_content"
            android:text="@string/download_line4" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <TextView
            android:id="@+id/line5_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="@string/download_line5"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="?android:textColorSecondary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/progress_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="?android:textColorSecondary" />

            <ProgressBar
                android:id="@+id/progress_transfer"
                style="?android:progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:max="100" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

    </LinearLayout>

</ScrollView>